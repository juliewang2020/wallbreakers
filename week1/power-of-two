class Solution(object):
    def isPowerOfTwo(self, n):
        """
        :type n: int
        :rtype: bool
        """
        n = float(n)
        while n  > 0:
            if n == 2 or n == 1:
                return True
            elif n > 2:
                n = n/2
            else:
                return False
            
        
